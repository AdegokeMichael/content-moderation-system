# Content Moderation System - Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=content_moderation
DB_USER=moderator
DB_PASSWORD=secure_password_change_me

# API Configuration
API_PORT=8000
LOG_LEVEL=INFO
WORKERS=2

# Social Media API Credentials (Optional - use mock if not provided)
# Facebook
FACEBOOK_TOKEN=

# Twitter/X
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# PgAdmin Configuration (Optional)
PGADMIN_EMAIL=admin@moderation.local
PGADMIN_PASSWORD=admin_change_me
PGADMIN_PORT=5050

# Monitoring (Optional)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin_change_me

# ML Model Configuration
TRANSFORMERS_CACHE=/root/.cache/huggingface
MODEL_VERSION=1.0.0

# Classification Thresholds (Optional - defaults in code)
TOXICITY_HIGH_THRESHOLD=0.8
TOXICITY_MEDIUM_THRESHOLD=0.6
SPAM_HIGH_THRESHOLD=0.7
CONFIDENCE_LOW_THRESHOLD=0.6